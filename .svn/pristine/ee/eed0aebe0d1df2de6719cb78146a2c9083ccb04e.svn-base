<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/white"
    android:orientation="vertical"
    android:scrollbarFadeDuration="1"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/blue"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btReturn"
            android:layout_width="50dip"
            android:layout_height="35dip"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:background="@drawable/blue"
            android:drawableLeft="@drawable/v1_back1"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="@drawable/white"
            android:text="发布车源" />

        <Button
            android:id="@+id/btReset"
            android:layout_width="50dip"
            android:layout_height="35dip"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/blue"
            android:drawableLeft="@drawable/v1_reset1" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                     android:textColor="@drawable/black"
                    android:text="出发地" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btProvinces"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@drawable/black"
                        android:text="省份" />

                    <Button
                        android:id="@+id/btCitys"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@drawable/black"
                        android:text="市区" />

                    <Button
                        android:id="@+id/btCounty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@drawable/black"
                        android:text="县区" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textColor="@drawable/black"
                    android:text="到达地" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/ddProvinces"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@drawable/black"
                        android:text="省份" />

                    <Button
                        android:id="@+id/ddCitys"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="市区" />

                    <Button
                        android:id="@+id/ddCounty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@drawable/black"
                        android:text="县区" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/way"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textColor="@drawable/black"
                    android:text="途径地" />

                <EditText
                    android:id="@+id/editMethods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="多个地点用；分割" />

                <TextView
                    android:id="@+id/carNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textColor="@drawable/black"
                    android:text="车牌号" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Spinner
                    android:id="@+id/carNumSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                     />

                <Button
                    android:id="@+id/addCar"
                    android:layout_width="108dp"
                    android:layout_height="40dp"
                    android:textColor="@drawable/black"
                    android:text="增加车辆" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:textColor="@drawable/black"
                    android:text="行驶类型：" />

                <RadioGroup
                    android:id="@+id/typeGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/returnCar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:textColor="@drawable/black"
                        android:text="回程车" />

                    <RadioButton
                        android:id="@+id/localCar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/black"
                        android:text="本地车" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/timetype"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:textColor="@drawable/black"
                    android:text="即时|长期：" />

                <RadioGroup
                    android:id="@+id/timeGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/immediateCar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:textColor="@drawable/black"
                        android:text="即时车源" />

                    <RadioButton
                        android:id="@+id/longtermCar"
                        android:layout_width="77dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.62"
                        android:textColor="@drawable/black"
                        android:text="长期车源" />
                </RadioGroup>
            </LinearLayout>

           <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:textColor="@drawable/black"
                    android:text="发车时间 :"
                    android:textSize="13dp" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:hint="(默认为今天起10天)"
                    android:textColor="@drawable/black"
                    android:textSize="13dp" >
                </TextView>

                <EditText
                    android:id="@+id/datepicker"
                    android:layout_width="match_parent"
                    android:layout_height="55dip"
                    android:layout_marginTop="8dip"
                    android:clickable="true"
                    android:ems="10"
                    android:shadowRadius="3.0" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textColor="@drawable/black"
                    android:text="常用语" />

                <Spinner
                    android:id="@+id/wordSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textColor="@drawable/black"
                    android:text="说明" />

                <EditText
                    android:id="@+id/editExplain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:text="求货源" />

                <Button
                    android:id="@+id/btRelease"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/black"
                    android:text="立即发布" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>